#!/usr/bin/env python

import argparse
from dmpfold import protocol_fdf, protocol_cns, protocol_xplor

parser = argparse.ArgumentParser(description="Protein structure prediction with DMPfold2. See https://github.com/psipred/DMPfold2 for documentation and citation information.")
parser.add_argument("-p", "--protocol", choices=["fdf", "cns", "xplor"],
    help="the method for generating models from predicted constraints")

args = parser.parse_args()

if args.protocol == "fdf":
    protocol_fdf()
elif args.protocol == "cns":
    protocol_cns()
elif args.protocol == "xplor":
    protocol_xplor()
